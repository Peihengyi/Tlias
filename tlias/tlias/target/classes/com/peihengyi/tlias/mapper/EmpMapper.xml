<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peihengyi.tlias.mapper.EmpMapper">
        <select id="empList" resultType="com.peihengyi.tlias.pojo.Emp">
                SELECT e.* FROM emp e
                LEFT JOIN dept d
                ON e.dept_id = d.id
                <where>
                        e.is_delete = 0
                        <if test="name != null and name != ''">
                                AND e.name LIKE CONCAT('%', #{name}, '%')
                        </if>
                        <if test="gender != null">
                                AND e.gender = #{gender}
                        </if>
                        <if test="begin != null">
                                AND e.entry_date &gt;= #{begin}
                        </if>
                        <if test="end != null">
                                AND e.entry_date &lt; #{end}
                        </if>
                </where>
                ORDER BY e.id
        </select>
</mapper>